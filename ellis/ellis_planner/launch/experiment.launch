<?xml version="1.0"?>
<launch>
  <!-- Load experiment parameters. -->
  <rosparam command="load" file="$(find ellis_planner)/config/experiment.yaml" />

  <!-- Record data to ROS bag. -->
  <node pkg="rosbag"
        type="record"
        name="rosbag_recorder"
        args="record -o /data/bags/ellis-experiment /tf /tf_static /mob/ellis_planner/vis /mob/ellis_planner/info /mob/choreographer/segment /mob/motion/feedback /exp/control_history" />

  <!-- Run the experiment manager. -->
  <node name="experiment_manager" type="exp" pkg="ellis_planner" output="screen" />
</launch>
